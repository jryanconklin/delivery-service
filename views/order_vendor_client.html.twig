{% include 'header.html.twig' %}
  <div class="wrapper">
    <h2>Place a {{vendor.getName}} Order!</h2>
    <div class="row">
      <div class="col-xs-2">

      </div>
      <div class="col-xs-8">
        <form action="new_order" method="post">
          <div class="form-group">
            <label for="order_details">Enter Order details:</label>
            <textarea class="form-control" name="order_details" id="order_details" rows="10"></textarea>
          </div>

          <div class="form-group">
            <label for="order_instructions">Enter Order instructions:</label>
            <textarea class="form-control" name="order_instructions" id="order_instructions" rows="6"></textarea>
          </div>
          <button type="button" class  name="button"></button>
        </form>

      </div>
      <div class="col-xs-2">

      </div>
    </div>
  </div>

